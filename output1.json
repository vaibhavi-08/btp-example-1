{
  "checkout": {
    "description": "Checkout source code",
    "commands": [
      "git checkout SCM"
    ]
  },
  "setup": {
    "description": "Setup Maven and dependencies",
    "commands": [
      "mvn dependency:resolve"
    ],
    "tools": [
      "maven",
      "jdk"
    ]
  },
  "build": {
    "description": "Compile and package application",
    "commands": [
      "mvn clean compile",
      "mvn package -DskipTests"
    ]
  },
  "test": {
    "description": "Execute test suites",
    "commands": [
      "mvn test",
      "mvn verify"
    ],
    "tools": [
      "junit"
    ]
  },
  "quality": {
    "description": "Quality gates and security scanning",
    "commands": [
      "mvn checkstyle:check",
      "mvn pmd:check",
      "mvn dependency-check:check"
    ],
    "tools": [
      "checkstyle",
      "pmd",
      "dependency-check"
    ]
  }
}