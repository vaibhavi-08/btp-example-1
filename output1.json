{
  "checkout": {
    "description": "Checkout source code from repository",
    "commands": [
      "git checkout SCM"
    ]
  },
  "setup": {
    "description": "Install dependencies and setup environment",
    "commands": [
      "mvn dependency:resolve -B"
    ],
    "tools": [
      "maven"
    ],
    "environment": {
      "MAVEN_OPTS": "-Duser.home=${WORKSPACE}/.m2"
    }
  },
  "build": {
    "description": "Compile code and build artifacts",
    "commands": [
      "mvn clean compile -B",
      "mvn package -DskipTests -B",
      "mvn dependency:analyze -B",
      "mvn dependency:tree -B"
    ],
    "tools": [
      "maven",
      "jdk"
    ]
  },
  "test": {
    "description": "Run unit tests and integration tests",
    "commands": [
      "mvn test -B",
      "mvn verify -DskipUnitTests -B"
    ],
    "tools": [
      "junit",
      "jacoco"
    ],
    "environment": {}
  },
  "quality": {
    "description": "Code quality checks, security scans, and dependency vulnerability scanning",
    "commands": [
      "mvn checkstyle:check -B",
      "mvn pmd:check -B",
      "mvn dependency-check-maven:check -DskipTests -B"
    ],
    "tools": [
      "checkstyle",
      "pmd",
      "dependency-check-maven"
    ],
    "environment": {}
  }
}